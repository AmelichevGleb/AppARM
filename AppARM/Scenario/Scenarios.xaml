<Window x:Class="AppARM.Scenario.Scenarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppARM.Scenario"
        mc:Ignorable="d"
        Title="Scenarios" Height="600" Width="1000">
    <Grid>
        <Grid Margin="5,5,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0">
                <Border Background="GhostWhite" BorderBrush="Black" BorderThickness="1" CornerRadius="20,20,20,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25 px"></RowDefinition>
                            <RowDefinition Height="25 px"></RowDefinition>
                            <RowDefinition Height="25 px"></RowDefinition>
                            <RowDefinition Height="25 px"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label  Margin="0,1,0,0"  FontWeight ="Bold" FontSize="12" Grid.Row="0">Подключение</Label>
                        <Grid Grid.Row="1">
                            <Border Margin="-1,0,-1,0" BorderBrush="Black"  BorderThickness="0.1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="53"></ColumnDefinition>
                                        <ColumnDefinition Width="110"></ColumnDefinition>
                                        <ColumnDefinition Width="40"></ColumnDefinition>
                                        <ColumnDefinition Width="50"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label  FontSize="9" FontWeight ="Bold"  Margin="2,2,2,2" Grid.Column="0">IP-адрес:</Label>
                                    <TextBox  x:Name="TB_IPAdress" FontSize="14" TextAlignment ="Justify"   Margin="2,2,2,2" Grid.Column="1">127.0.0.1</TextBox>
                                    <Label  FontSize="9" FontWeight ="Bold" Margin="2,2,2,2" Grid.Column="2">Порт:</Label>
                                    <TextBox x:Name="TB_Port"  FontSize="14"   TextAlignment ="Justify" Margin="2,2,2,2" Grid.Column="3">11000</TextBox>
                                    <Button x:Name="B_Connect" FontSize="9" Margin="2,2,2,2" Grid.Column="4" Click="Button_Click_Connect">Подкл</Button>
                                    <Button  x:Name="B_Disconnect" FontSize="9"  Margin="2,2,2,2" Grid.Column="5" Click="Button_Click_Disconnect">Откл</Button>
                                </Grid>
                            </Border>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Label  FontWeight ="Bold" FontSize="11" MouseLeftButtonUp="MouseClick_AddTextLable" >Место под сервера команд</Label>
                        </Grid>
                        <Grid Grid.Row="3">
                            <Label MouseLeftButtonUp="MouseClick_ClearLable">Логи</Label>
                        </Grid>
                        <Grid Margin ="6,6,6,6" Grid.Row="4">
                            <ScrollViewer>
                                <TextBlock x:Name="Test" Background="White"/>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
            <Grid Margin="5,0,0,0" Grid.Column="1">
                <Border Background="AliceBlue" BorderBrush="Black"  BorderThickness="1" CornerRadius="20,20,20,20"  >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="28 px"></RowDefinition>
                            <RowDefinition Height="28 px"></RowDefinition>
                            <RowDefinition Height="28 px"></RowDefinition>
                            <RowDefinition Height="28 px"></RowDefinition>
                            <RowDefinition Height="200 px"></RowDefinition>
                            <RowDefinition Height="28 px"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"></ColumnDefinition>
                                <ColumnDefinition Width="50"></ColumnDefinition>

                            </Grid.ColumnDefinitions>
                            <Label Margin="0,1,0,0"  FontWeight ="Bold" FontSize="12" Grid.Row="0">1. Пинг</Label>
                            <Button x:Name="BT_Ping"   Click="BT_Ping_Click" Grid.Column="1" FontSize="9" Padding="0, 0, 0, 1" Margin="10,7,0,0" HorizontalContentAlignment="Center" Height="15" VerticalAlignment="Top">Ping</Button>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Border Margin="-1,0,-1,0" BorderBrush="Black"  BorderThickness="0.1">
                                <Label Margin="0,1,0,0"  FontWeight ="Bold" FontSize="12" Grid.Row="0">2. Запуск сценария</Label>
                            </Border>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="105"></ColumnDefinition>
                                <ColumnDefinition Width="50"></ColumnDefinition>
                                <ColumnDefinition Width="120"></ColumnDefinition>
                                <ColumnDefinition Width="25"></ColumnDefinition>
                                <ColumnDefinition Width="50"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">Номер сценария:</Label>
                            <ComboBox x:Name="CB_Script_number" Margin="5,7,5,6"  Padding="10, 0, 0, 1" HorizontalContentAlignment="Stretch" FontSize="9" Grid.Column ="1">
                                <TextBlock>1</TextBlock>
                                <TextBlock>2</TextBlock>
                                <TextBlock>3</TextBlock>
                                <TextBlock>4</TextBlock>
                            </ComboBox>
                            <Label Grid.Column="2">Внешний источник:</Label>
                            <CheckBox x:Name="CB_Sound" Grid.Column="3" Margin="5,7,5,0"/>
                            <Button x:Name="B_StartScenario" Grid.Column="4" FontSize="9" Padding="0, 0, 0, 1" Margin="10,7,0,0" HorizontalContentAlignment="Center" Click="Button_Click_StartScenario" Height="15" VerticalAlignment="Top">Запуск</Button>
                        </Grid>
                        <Grid Grid.Row="3">
                            <Border Margin="-1,0,-1,0" BorderBrush="Black"  BorderThickness="0.1">
                                <Label Margin="0,1,0,0"  FontWeight ="Bold" FontSize="12">3. Старт сеанса</Label>
                            </Border>
                        </Grid>
                        <Grid Grid.Row="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30 px"></RowDefinition>
                                <RowDefinition Height="30 px"></RowDefinition>
                                <RowDefinition Height="30 px"></RowDefinition>
                                <RowDefinition Height="30 px"></RowDefinition>
                                <RowDefinition Height="30 px"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                    <ColumnDefinition Width="25"></ColumnDefinition>
                                    <ColumnDefinition Width="130"></ColumnDefinition>
                                    <ColumnDefinition Width="25"></ColumnDefinition>
                                    <ColumnDefinition Width="125"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0">Рабочий запуск:</Label>
                                <CheckBox x:Name="CB_WL" Grid.Column="1"  Margin="5,7,5,0"></CheckBox>
                                <Label Grid.Column="2">Сирены непрерывно:</Label>
                                <CheckBox x:Name="CB_SC" Grid.Column="3" Margin="5,7,5,0"></CheckBox>
                                <Label Grid.Column="4">Команда П160/П164:</Label>
                                <TextBox x:Name="TB_Command" Margin="10,8,10,9" Padding="10, 0, 0, 1" HorizontalContentAlignment="Stretch" FontSize="9" Grid.Column="5">0</TextBox>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="130"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0">Id Апу через ";"</Label>
                                <TextBox x:Name="TB_IdAPU" Margin="10,8,10,9" Padding="10, 0, 0, 1" HorizontalContentAlignment="Stretch" FontSize="9" Grid.Column="1"></TextBox>
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="130"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0">Id устройств через ";"</Label>
                                <TextBox x:Name="TB_IdDevise" Margin="10,8,10,9" Padding="10, 0, 0, 1" HorizontalContentAlignment="Stretch" FontSize="9" Grid.Column="1"></TextBox>
                            </Grid>
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"></ColumnDefinition>
                                    <ColumnDefinition Width="35"></ColumnDefinition>
                                    <ColumnDefinition Width="25"></ColumnDefinition>
                                    <ColumnDefinition Width="35"></ColumnDefinition>
                                    <ColumnDefinition Width="25"></ColumnDefinition>
                                    <ColumnDefinition Width="35"></ColumnDefinition>
                                    <ColumnDefinition Width="25"></ColumnDefinition>
                                    <ColumnDefinition Width="55"></ColumnDefinition>
                                    <ColumnDefinition Width="25"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0">Тип устройств:</Label>
                                <Label Grid.Column="1">АПУ:</Label>
                                <CheckBox x:Name="CB_APU"  Margin="5,7,5,0" Grid.Column="2"></CheckBox>
                                <Label Grid.Column="3">ТЛФ:</Label>
                                <CheckBox x:Name="CB_TLF" Grid.Column="4" Margin="5,7,5,0"></CheckBox>
                                <Label Grid.Column="5">РТУ:</Label>
                                <CheckBox x:Name="CB_RTU" Grid.Column="6" Margin="5,7,5,0"></CheckBox>
                                <Label Grid.Column="7">Сирены:</Label>
                                <CheckBox x:Name="CB_SRN" Grid.Column="8" Margin="5,7,5,0"></CheckBox>
                                <Button Grid.Column="9" FontSize="9" Padding="0, -2, 0, 0" Margin="10,8,10,9" Click="BС_StartScenarios">Запуск</Button>
                            </Grid>
                            <Grid Grid.Row="4">
                                <Border Margin="-1,0,-1,0" BorderBrush="Black"  BorderThickness="0.1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="300"></ColumnDefinition>
                                            <ColumnDefinition Width="50"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Label Margin="0,1,0,0"  FontWeight ="Bold" FontSize="12" Grid.Row="0">4. Остановка оповещения ( Вопросы к работе !!!)</Label>
                                        <Button x:Name="BT_Stop"  Grid.Column="2" FontSize="9" Padding="0, 0, 0, 1" Margin="10,7,0,0" HorizontalContentAlignment="Center" Height="15" VerticalAlignment="Top" Click="BT_Stop_Click">Stop</Button>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
